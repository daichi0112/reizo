<div class='sessions-contents'>
  <div class='new-sub-contents'>
    <div class='new-header'>
        <%= link_to 'Reizo', root_path, class:'new-top-btn' %>
    </div>
    <div class='new-main'>
      <h1 class='new-title'>
        ログイン画面
      </h1>
      <div class='login-flash-message'>
        <%= flash[:alert] %>
      </div>
      <div class='new-form'>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class='sessions-form-group'>
            <div class='text-title'>
              Eメール
              <span class='required'>必須</span>
            </div>
            <%= f.email_field :email, class:'new-text', placeholder: '例) reizo@reizo.com', autofocus: true %>
          </div>

          <div class='form-group'>
            <div class='text-title'>
              パスワード
              <span class='required'>必須</span>
            </div>
            <%= f.password_field :password, class:'new-text', placeholder: '半角英数字で入力' %>
          </div>

          <div class='submit-form'>
            <%= f.submit 'ログイン', class:'submit-btn'%>
            <%= link_to '新規登録ページ', new_user_registration_path, class:'registrations-new-btn' %>
            <%= link_to '戻る', root_path, class: 'sessions-back-btn' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>